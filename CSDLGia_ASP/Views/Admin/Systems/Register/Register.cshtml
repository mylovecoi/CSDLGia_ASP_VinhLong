@{
    Layout = null;
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
}
@model CSDLGia_ASP.ViewModels.Systems.VMRegisters
<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] | CSDL Giá</title>
    <meta name="description" content="Login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="canonical" href="https://keenthemes.com/metronic" />
    <!--begin::Fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,500,600,700" />
    <!--end::Fonts-->
    <!--begin::Page Custom Styles(used by this page)-->
    <link href="~/Admin/assets/css/pages/login/classic/login-3.css" rel="stylesheet" type="text/css" />
    <!--end::Page Custom Styles-->
    <!--begin::Global Theme Styles(used by all pages)-->
    <link href="~/Admin/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/assets/plugins/custom/prismjs/prismjs.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Global Theme Styles-->
    <!--begin::Layout Themes(used by all pages)-->
    <link href="~/Admin/assets/css/themes/layout/header/base/light.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/assets/css/themes/layout/header/menu/light.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/assets/css/themes/layout/brand/dark.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/assets/css/themes/layout/aside/dark.css" rel="stylesheet" type="text/css" />
    <!--end::Layout Themes-->
    <link rel="shortcut icon" href="~/Admin/FileUpload/Logo/LogoKhanhHoa.png" />

    @* <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" /> *@

</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Login-->
        <div class="login login-3 login-signin-on d-flex flex-row-fluid" id="kt_login">
            <div class="d-flex flex-center flex-column-fluid bgi-position-y-center position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url('../../../Admin/assets/media/bg/14.png'); ">
                <div class="login-form text-center text-white p-7 position-static overflow-hidden"
                     style="position: static; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5); overflow: hidden; color: #000; max-width: 1000px;">
                    <!--begin::Login Header-->
                    @* <div class="d-flex flex-center mb-15">
                        <a href="#">
                            <img src="~/logo/logovn.png" width="150" alt="Phần mềm Cơ sở dữ liệu giá Khánh Hòa" />
                        </a>
                    </div> *@
                    <!--end::Login Header-->
                    <!--begin::Login Sign in form-->
                    <div class="login-signin">
                        <div class="mb-10">
                            <h1 style="font-weight: bold; color: black; font-size: 30px; ">
                                ĐĂNG KÝ TÀI KHOẢN
                            </h1>
                            <p class="text-dark opacity-60 font-weight-bold">Đã có tài khoản? <a asp-controller="Auth" asp-action="Login">Bấm vào đây để đăng nhập</a></p>
                        </div>
                        <form asp-controller="Register" asp-action="Store" method="post" id="kt_login_signin_form" enctype="multipart/form-data">
                            <p class="text-left" style="color: blue; font-weight: bold">Thông tin doanh nghiệp</p>
                            <div class="row text-left">
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Tên doanh nghiệp<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="text" asp-for="Tendn" required />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Mã số thuế hoặc mã số đăng ký KD<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="text" asp-for="Madv" required />
                                        <span asp-validation-for="Madv" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Số điện thoại trụ sở chính<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="tel" asp-for="Tel" required />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Số fax trụ sở chính<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="tel" asp-for="Fax" required />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Địa chỉ trụ sở<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="text" asp-for="Diachi" required />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Địa danh<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="text" asp-for="Diadanh" required />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Email<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="email" asp-for="Email" required />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Website<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="text" asp-for="Website" required />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Thông tin giấy tờ<span class="text-danger">*</span></label>
                                        <textarea class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="text" asp-for="Tailieu" required></textarea>
                                    </div>
                                </div>
                                <div class="col-xl-6 text-dark">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Giấy đăng ký kinh doanh<span class="text-danger">*</span></label><br />
                                        <input class="text-dark opacity-60 font-weight-bold" type="file" asp-for="Giayphepkdupload" accept=".doc, .pdf, .img" required />
                                    </div>
                                </div>

                            </div>

                            <p class="text-left" style="color: blue; font-weight: bold">Thông tin lĩnh vực kinh doanh</p>
                            @await Html.PartialAsync("~/Views/Admin/Systems/Register/Lvkd.cshtml")
                            <br />
                            <br />
                            <p class="text-left" style="color: blue; font-weight: bold">Thông tin đăng nhập</p>
                            <div class="row text-left">
                                <div class="col-xl-12">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Cơ quan quản lý xét duyệt đăng ký tài khoản<span class="text-danger">*</span></label>
                                        <select class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7 select2basic" asp-for="Macqcq" required>
                                            @foreach (var item in dsdonvi)
                                            {
                                                <option value="@item.MaDv">&emsp;@item.TenDv</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Tài khoản đăng nhập<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="text" asp-for="Username" required />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group">
                                        <label class="font-size-h7 font-weight-bolder text-dark">Mật khẩu<span class="text-danger">*</span></label>
                                        <input class="form-control h-auto py-3 px-6 border-0 rounded-lg font-size-h7" type="password" asp-for="Password" required />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-center mt-10">
                                <button type="button" onclick="ValidateRegister()" class="btn btn-pill btn-primary font-weight-bold opacity-90 px-15 py-3">Đăng ký</button>
                            </div>
                        </form>


                        <div class="mt-10">
                            <span class="text-dark opacity-70 mr-4" style="font-weight:bold">
                                Copyright &copy; 2013 - @DateTime.Now.Year.ToString() LifeSoft <a href="">Tiện ích hơn - Hiệu quả hơn</a>
                            </span>
                        </div>
                    </div>
                    <!--end::Login Sign in form-->
                </div>
            </div>
        </div>
        <!--end::Login-->
    </div>
    <!--end::Main-->
    <!--begin::Global Config(global config for global JS scripts)-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        var KTAppSettings = {
            "breakpoints":
                { "sm": 576, "md": 768, "lg": 992, "xl": 1200, "xxl": 1400 },
            "colors": {
                "theme": {
                    "base":
                        { "white": "#ffffff", "primary": "#3699FF", "secondary": "#E5EAEE", "success": "#1BC5BD", "info": "#8950FC", "warning": "#FFA800", "danger": "#F64E60", "light": "#E4E6EF", "dark": "#181C32" },
                    "light":
                        { "white": "#ffffff", "primary": "#E1F0FF", "secondary": "#EBEDF3", "success": "#C9F7F5", "info": "#EEE5FF", "warning": "#FFF4DE", "danger": "#FFE2E5", "light": "#F3F6F9", "dark": "#D6D6E0" },
                    "inverse":
                        { "white": "#ffffff", "primary": "#ffffff", "secondary": "#3F4254", "success": "#ffffff", "info": "#ffffff", "warning": "#ffffff", "danger": "#ffffff", "light": "#464E5F", "dark": "#ffffff" }
                },
                "gray": {
                    "gray-100": "#F3F6F9", "gray-200": "#EBEDF3", "gray-300": "#E4E6EF", "gray-400": "#D1D3E0", "gray-500": "#B5B5C3", "gray-600": "#7E8299", "gray-700": "#5E6278", "gray-800": "#3F4254", "gray-900": "#181C32"
                }
            }, "font-family": "Nunito Sans"
        };

        $(document).ready(function () {
            TableManaged.init();
            TableManaged2.init();
            TableManaged4.init();
            TableManaged6.init();
            TableManaged8.init();
        });

        function ValidateRegister() {
            if ($('#Tendn').val() == '') {
                toastr.error("Tên doanh nghiệp không được để trống!", "Lỗi!!!")
            } else {
                if ($('#Madv').val() == '') {
                    toastr.error("Mã số thuế không được để trống!", "Lỗi!!!")
                } else {
                    if ($('#Username').val() == '') {
                        toastr.error("Tên đăng nhập không được để trống!", "Lỗi!!!")
                    } else {
                        if ($('#Password').val() == '') {
                            toastr.error("Mật khẩu không được để trống!", "Lỗi!!!")
                        } else {
                            document.getElementById("kt_login_signin_form").submit();
                        }
                    }
                }
            }
        }
    </script>
    <!--end::Global Config-->
    <!--begin::Global Theme Bundle(used by all pages)-->
    <script src="~/Admin/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/Admin/assets/plugins/custom/prismjs/prismjs.bundle.js"></script>
    <script src="~/Admin/assets/js/scripts.bundle.js"></script>
    <!--end::Global Theme Bundle-->
    <!--begin::Page Scripts(used by this page)-->
    <script src="~/Admin/assets/js/pages/custom/login/login-general.js"></script>
    <!--end::Page Scripts-->

    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>
</body>
<!--end::Body-->
</html>