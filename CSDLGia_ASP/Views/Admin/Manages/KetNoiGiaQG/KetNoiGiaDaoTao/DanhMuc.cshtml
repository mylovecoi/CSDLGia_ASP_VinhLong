@model IEnumerable<CSDLGia_ASP.Models.Manages.DinhGia.GiaDvGdDtNhom>
@{
    var record_id = 1;
    var ketNoiAPI = ViewData["KetNoiAPI_DanhSach"] as CSDLGia_ASP.Models.Systems.API.KetNoiAPI_DanhSach;
}
@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script src="~/Admin/assets/js/pages/crud/forms/widgets/select2.js"></script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                THÔNG TIN DỮ LIỆU GIÁ DỊCH VỤ GIÁO DỤC MẦM NON VÀ GIÁO DỤC PHỔ THÔNG CÔNG LẬP
            </h3>
        </div>
        <div class="card-toolbar">
           
        </div>
    </div>
    <hr />
    <div class="card-body">

        <div class="row">
            <div class="col-xl-12">
                <table class="table table-striped table-bordered table-hover" id="sample_3">
                    <thead>
                        <tr style="text-align:center">
                            <th width="10%">STT</th>
                            <th>Mã nhóm</th>
                            <th>Tên nhóm</th>
                            <th>Trạng thái kết nối</th>
                            <th>Thời gian kết nối</th>
                            <th width="15%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align: center">@(record_id++)</td>
                                    <td style="text-align: center">@item.MaNhom</td>
                                    <td style="text-align: left">@item.TenNhom</td>
                                    <td style="text-align: left"></td>
                                    <td style="text-align: left"></td>
                                    <td style="text-align: center">
                                        <button type="button" class="btn btn-sm btn-clean btn-icon" title="Sửa" data-toggle="modal" data-target="#TruyenDuLieu_Modal" onclick="setTruyenDL('DANHMUC','@ketNoiAPI.Maso','@item.MaNhom','@ketNoiAPI.LinkTruyenPost','@ketNoiAPI.MaDiaBan','@ketNoiAPI.MaDonVi','@ketNoiAPI.NguoiTao','@ketNoiAPI.NguoiDuyet','@ketNoiAPI.MaBM')">
                                            <i class="icon-lg la la-mail-forward text-primary"></i>
                                        </button>                                       
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


<!--Create Modal-->
<div class="modal fade" id="TruyenDuLieu_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="API" asp-action="TruyenDuLieuCSDLQG" method="post" enctype="multipart/form-data" id="frm_truyendulieu">
            <input type="hidden" name="MaKetNoiAPI" />
            <input type="hidden" name="Mahs" />
            <input type="hidden" name="PhanLoaiDL" />

            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label">
                        Thông tin chi tiết
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">                    
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label>Link truyền dữ liệu</label>
                                <input type="text" class="form-control" name="LinkAPIKetNoi" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label>Mã địa bàn</label>
                                <input type="text" class="form-control" name="MaDiaBan" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label>Mã đơn vị</label>
                                <input type="text" class="form-control" name="MaDonVi" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label>Người tạo</label>
                                <input type="text" class="form-control" name="NguoiTao" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label>Người duyệt</label>
                                <input type="text" class="form-control" name="NguoiDuyet" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label>Link API token<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="LinkAPIXacthuc" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label>Mã Token Access<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="TokenLGSP" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group fv-plugins-icon-container">
                                <label>Chức năng</label>
                                <select name="THAO_TAC" class="form-control">
                                    <option value="true">Truyền dữ liệu</option>
                                    <option value="false">Xem dữ liệu</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Đồng ý</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function setThietLap(phanLoai, maso, mahs, linkTruyen, maDiaBan, maDonVi, nguoiTao, nguoiDuyet, maBM) {
        var form = $('#frm_truyendulieu');
        form.find("[name='MaKetNoiAPI']").val(maso);
        form.find("[name='PhanLoai']").val(phanLoai);
        form.find("[name='Mahs']").val(mahs);
        form.find("[name='LinkTruyenPost']").val(linkTruyen);
        form.find("[name='MaDiaBan']").val(maDiaBan);
        form.find("[name='MaDonVi']").val(maDonVi);
        form.find("[name='NguoiTao']").val(nguoiTao);
        form.find("[name='NguoiDuyet']").val(nguoiDuyet);
        form.find("[name='MaBM']").val(maBM);
    }   
</script>

