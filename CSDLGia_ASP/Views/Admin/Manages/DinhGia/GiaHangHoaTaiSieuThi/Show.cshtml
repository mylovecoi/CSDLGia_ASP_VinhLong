@{
    Layout = "_LayoutReports";
    var dsdiaban = (IEnumerable<DsDiaBan>)ViewData["DsDiaBan"];
    var dsdonvi = (IEnumerable<DsDonVi>)ViewData["DsDonVi"];
    int record_id = 1;
}

<br />
<br />
@model CSDLGia_ASP.Models.Manages.DinhGia.GiaHangHoaTaiSieuThi
<p style="text-align: center; font-weight: bold; font-size: 30px;">THÔNG TIN HỒ SƠ </p>
<p style="text-align: left; font-size: 16px;">Số quyết định:@Model.Soqd</p>
<p style="text-align: left; font-size: 16px;">Địa bàn: </p>
<p style="text-align: left; font-size: 16px;">Thời điểm: @Model.Thoidiem</p>
<br />
<p style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin hồ sơ chi tiết</p>
<table cellspacing="0" cellpadding="0" border="1" style="margin: 20px auto; border-collapse: collapse;font:normal 14px Times, serif;" id="data_render">

    <thead>
        <tr style="text-align:center">
            <th rowspan="2">STT</th>
            <th rowspan="2">Mã hàng hóa</th>
            <th rowspan="2">Tên hàng hóa</th>
            <th colspan="2">Đơn giá</th>
        </tr>
        <tr style="text-align:center">
            <th>Giá từ</th>
            <th>Giá đến</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.GiaHangHoaTaiSieuThiCt != null)
        {
            @foreach (var item in Model.GiaHangHoaTaiSieuThiCt)
            {
                <tr style="text-align:center">
                    <td style="text-align:center">@(record_id++)</td>
                    <td style="text-align:center">@item.Mahanghoa</td>
                    <td style="text-align:center">@item.Tenhanghoa</td>
                    <td style="text-align:right">@(@item.Giatu != 0 ? Helpers.ConvertDbToStr(item.Giatu) : "")</td>
                    <td style="text-align:right">@(@item.Giaden != 0 ? Helpers.ConvertDbToStr(item.Giaden) : "")</td>
                </tr>
            }
        }
    </tbody>
</table>

</table>
